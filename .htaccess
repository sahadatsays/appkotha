# .htaccess for public_html root
# Routes all requests to official-website/public/index.php

<IfModule mod_rewrite.c>
    RewriteEngine On

    # Don't rewrite if already in official-website/public directory
    RewriteCond %{REQUEST_URI} ^/official-website/public/
    RewriteRule ^ - [L]

    # Route all requests to official-website/public directory
    # This will let Laravel's .htaccess in public folder handle the routing
    RewriteCond %{REQUEST_URI} !^/official-website/public/
    RewriteRule ^(.*)$ /official-website/public/$1 [L]
</IfModule>

# Disable Directory Browsing
Options -Indexes
